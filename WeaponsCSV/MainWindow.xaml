                    <Button x:Name="button_Copy1" Content="Save" Margin="0,333.499,23.274,0" VerticalAlignment="Top" Grid.Column="3" HorizontalAlignment="Right" Width="54" Height="19.96"/>
                    <ComboBox Text="{Binding obsolete2_false}" ItemsSource="{Binding TrueFalse}" x:Name="comboBox_Copy" Margin="0.596,204.009,69.274,0" VerticalAlignment="Top" Grid.Column="3" Height="21.96"/>

