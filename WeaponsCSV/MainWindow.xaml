                    <ComboBox TextBoxBase.TextChanged="comboBox_TextChanged"  ItemsSource="{Binding WeaponNames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Text="{Binding weapon_name}" x:Name="weaponname" Margin="20.866,21.681,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="21.96" IsEditable="True" ToolTip="Weapon file name"/>
                    <Label x:Name="label_Copy" Content="upgrade__name" HorizontalAlignment="Left" Margin="21.064,43.441,0,0" VerticalAlignment="Top" Width="93.951" Height="25.96" Grid.ColumnSpan="2"/>
                    <Label x:Name="label_Copy1" Content="hint" HorizontalAlignment="Left" Margin="20.478,185.757,0,0" VerticalAlignment="Top" Height="25.96" Width="30.553" Grid.ColumnSpan="2"/>
                    <TextBox Text="{Binding weaponVOresp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="textBox_Copy3" Height="23" Margin="0,254.315,15.424,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="UpdateDB" Grid.ColumnSpan="2"/>
                    <Label x:Name="label_Copy2" Content="cost" HorizontalAlignment="Left" Margin="21.427,90.123,0,0" VerticalAlignment="Top" Height="25.96" Width="31.733" Grid.ColumnSpan="2"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="cost" Margin="20.927,114.509,10.812,0" VerticalAlignment="Top" IsEditable="True" ToolTip="Cost of wall buy" Height="21.96" Grid.ColumnSpan="2" />
                    <Label x:Name="label_Copy3" Content="weaponVO" HorizontalAlignment="Left" Margin="0,186.775,0,0" VerticalAlignment="Top" Grid.Column="2" Width="79.808" Height="25.96" Grid.ColumnSpan="2"/>
                    <Label x:Name="label_Copy4" Content="weaponVOresp" HorizontalAlignment="Left" Margin="0.913,232.209,0,0" VerticalAlignment="Top" Grid.Column="2" Height="25.96" Width="90.733" Grid.ColumnSpan="2"/>
