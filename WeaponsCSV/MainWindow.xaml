                    <TextBox Text="{Binding limit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="textBox_Copy6" Height="23" Margin="0,66.887,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="OnlyNumeric" Grid.Column="4" HorizontalAlignment="Left" Width="43.037"/>
                    <Label x:Name="label_Copy11" Content="limit" HorizontalAlignment="Left" Margin="0.718,44.541,0,0" VerticalAlignment="Top" Height="25.96" Width="33.123" Grid.Column="4"/>
                    <TextBox TextChanged="OnlyNumeric" Text="{Binding upgrade_limit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="textBox_Copy7" Height="23" Margin="49.226,66.787,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Left" Width="87.23"/>
                    <Label x:Name="label_Copy12" Content="upgrade__limit" HorizontalAlignment="Left" Margin="44.313,43.441,0,0" VerticalAlignment="Top" Grid.Column="4" Height="25.96" Width="82.637"/>
                    <Label x:Name="label_Copy13" Content="obsolete2__false" HorizontalAlignment="Left" Margin="0.413,183.315,0,0" VerticalAlignment="Top" Grid.Column="4" Height="25.96" Width="93.419"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding weaponVO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding WVO}" x:Name="weaponVO" Margin="0.742,209.921,28.92,0" VerticalAlignment="Top" Grid.Column="2" IsEditable="True" Height="21.96" Grid.ColumnSpan="2"/>
                    <Label x:Name="label_Copy14" Content="wallbuy__autospawn" HorizontalAlignment="Left" Margin="20.735,230.727,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="25.96" Width="112.933"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding wallbuy_autospawn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TrueFalse}" x:Name="comboBox_Copy6" Margin="21.136,255.355,10.812,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="21.96" IsEditable="True"/>
                    <Label x:Name="label_Copy15" Content="class" HorizontalAlignment="Left" Margin="1.413,134.429,0,0" VerticalAlignment="Top" Grid.Column="2" Height="25.96" Width="34.743" Grid.ColumnSpan="2"/>
