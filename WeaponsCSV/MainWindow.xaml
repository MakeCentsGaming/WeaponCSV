                    <TextBox Text="{Binding obsolete_false, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="textBox_Copy5" Height="23" Margin="0.316,111.893,23.274,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="3"/>
