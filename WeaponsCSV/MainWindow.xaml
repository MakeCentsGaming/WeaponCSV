                    <Label x:Name="label_Copy5" Content="ammo__cost" HorizontalAlignment="Left" Margin="21.147,135.229,0,0" VerticalAlignment="Top" Height="25.96" Width="70.523" Grid.ColumnSpan="2"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding ammo_cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="comboBox_Copy1" Margin="21.147,159.615,10.812,0" VerticalAlignment="Top" IsEditable="True" Height="21.96" Grid.ColumnSpan="2" ToolTip="Cost of ammo from wall buy"/>
                    <Label x:Name="label_Copy6" Content="create__vox" HorizontalAlignment="Left" Margin="0.659,88.647,0,0" VerticalAlignment="Top" Grid.Column="2" Height="25.96" Width="65.707" Grid.ColumnSpan="2"/>
                    <Label x:Name="label_Copy7" Content="obsolete__false" HorizontalAlignment="Left" Margin="0.596,135.993,0,0" VerticalAlignment="Top" Grid.Column="4" Height="25.96" Width="84.853"/>
                    <Label x:Name="label_Copy8" Content="in__box" HorizontalAlignment="Left" Margin="5.381,-1.705,0,0" VerticalAlignment="Top" Height="25.96" Width="44.267" Grid.Column="3"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding in_box, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TrueFalse, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="comboBox_Copy2" Margin="5.381,21.681,23.388,0" VerticalAlignment="Top" Height="21.96" IsEditable="True" Grid.Column="3"/>
                    <Label x:Name="label_Copy9" Content="upgrade__in__box" HorizontalAlignment="Left" Margin="7.098,44.441,0,0" VerticalAlignment="Top" Grid.Column="3" Height="25.96" Width="93.78"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding upgrade_in_box, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TrueFalse, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="comboBox_Copy3" Margin="6.651,67.827,21.801,0" VerticalAlignment="Top" Grid.Column="3" Height="21.96" IsEditable="True"/>
                    <Label x:Name="label_Copy10" Content="is__limited" HorizontalAlignment="Left" Margin="0.59,-0.705,0,0" VerticalAlignment="Top" Grid.Column="4" Height="25.96" Width="59.447"/>
