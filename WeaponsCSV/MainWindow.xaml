<Window x:Class="WeaponsCSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeaponsCSV"
        mc:Ignorable="d"
        Title="MainWindow" Height="483.825" Width="478" MinHeight="483.825" MinWidth="525" MaxHeight="483.825">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid Background="#FFE5E5E5" Margin="-4.722,-0.323,-4.215,-2.895">
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <TabControl  Margin="9,49.5,10,10" Grid.ColumnSpan="3" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Editor">
                <Grid Margin="0,0,-5.5,-0.115">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="149*"/>
                        <ColumnDefinition Width="32*"/>
                        <ColumnDefinition Width="141*"/>
                        <ColumnDefinition Width="163*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text ="{Binding upgrade_name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="textBox_Copy1" Height="23" Margin="20.735,66.787,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="UpdateDB" Grid.ColumnSpan="3" ToolTip="Upgraded weapon file name"/>
