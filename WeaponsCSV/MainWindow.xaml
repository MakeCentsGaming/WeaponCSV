                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding is_aat_exempt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TrueFalse}" x:Name="comboBox_Copy8" Margin="0.14,255.355,22.028,0" VerticalAlignment="Top" Grid.Column="4" Height="21.96" IsEditable="True"/>
                    <Label x:Name="label_Copy17" Content="is__wonder__weapon" HorizontalAlignment="Left" Margin="0.195,88.365,0,0" VerticalAlignment="Top" Height="25.96" Width="109.9" Grid.Column="4"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding is_wonder_weapon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TrueFalse}" x:Name="comboBox_Copy9" Margin="0.88,111.993,26.363,0" VerticalAlignment="Top" Height="21.96" IsEditable="True" Grid.Column="4"/>
                    <TextBox Text="{Binding force_attachments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="textBox_Copy" Height="23" Margin="20.478,301.406,22.908,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="5" TextChanged="UpdateDB"/>
                    <Label x:Name="label_Copy18" Content="force__attachments" HorizontalAlignment="Left" Margin="20.949,278.06,0,0" VerticalAlignment="Top" Height="25.96" Width="107.003" Grid.ColumnSpan="2"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding obsolete2_false, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TrueFalse}" x:Name="comboBox_Copy" Margin="0.88,204.009,22.028,0" VerticalAlignment="Top" Grid.Column="4" Height="21.96" IsEditable="True"/>
                    <ComboBox TextBoxBase.TextChanged="UpdateDB" Text="{Binding obsolete_false, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TrueFalse}" x:Name="comboBox_Copy4" Margin="0,159.239,22.908,0" VerticalAlignment="Top" Grid.Column="4" Height="21.96" IsEditable="True"/>
                    <DockPanel Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="36.654" LastChildFill="False" VerticalAlignment="Top" Width="475.959" Margin="20.478,329.406,0,0" RenderTransformOrigin="0.5,0.5">
                        <Button Command="{Binding ClearAll}" x:Name="button_Copy" Content="Clear" VerticalAlignment="Top" HorizontalAlignment="Left" Width="54" Height="19.96"/>
                        <DockPanel Height="36.654" LastChildFill="False" VerticalAlignment="Top" Width="12"/>
                        <Button IsEnabled="{Binding CommentOut}" Command="{Binding Delete}" x:Name="button_Copy2" Content="Comment Out" VerticalAlignment="Top" HorizontalAlignment="Left" Width="87.239" Height="19.96"/>
                        <DockPanel Height="36.654" LastChildFill="False" VerticalAlignment="Top" Width="12"/>
                        <Button IsEnabled="{Binding NewLine}" Command="{Binding Add}" x:Name="button" Content="Add" VerticalAlignment="Top" HorizontalAlignment="Left" Width="69" Height="19.96"/>
                        <DockPanel Height="36.654" LastChildFill="False" VerticalAlignment="Top" Width="12"/>
                        <Button Command="{Binding Save}" x:Name="button_Copy1" Content="Save" VerticalAlignment="Top" HorizontalAlignment="Left" Width="54" Height="19.96"/>
                    </DockPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Spreadsheet">
                <Grid Background="#FFE5E5E5">
                    <DataGrid CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding AllLines, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalScrollBarVisibility="Auto" x:Name="spreadsheet" Margin="10" CellEditEnding="spreadsheet_CellEditEnding" RowEditEnding="spreadsheet_RowEditEnding" MouseLeave="spreadsheet_MouseLeave"/>
                </Grid>
            </TabItem>
        </TabControl>
        <TextBox Text="{Binding FileFolderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="filefoldername" Height="23" Margin="10.72,21,10,0" TextWrapping="NoWrap" VerticalAlignment="Top" TextChanged="filefoldername_TextChanged" Grid.ColumnSpan="3"/>
        <Label x:Name="label_Copy19" Content="File Name" HorizontalAlignment="Left" Margin="8.866,0.795,0,0" VerticalAlignment="Top" Height="25.96" Width="86.42"/>
    </Grid>
</Window>
