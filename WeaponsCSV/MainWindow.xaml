                    <Button x:Name="button" Content="Duplicate" Margin="0,333.499,158.274,0" VerticalAlignment="Top" Grid.Column="2" HorizontalAlignment="Right" Width="69" Height="19.96" Grid.ColumnSpan="2"/>
                    <TextBox Text="{Binding limit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="textBox_Copy6" Height="23" Margin="21.404,206.661,13.433,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" TextChanged="OnlyNumeric"/>
                    <Label x:Name="label_Copy11" Content="limit" HorizontalAlignment="Left" Margin="21.122,183.315,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="25.96" Width="33.123"/>
